# Backend Environment Variables

# FastAPI Configuration
APP_NAME=Logistics Manager Backend
API_VERSION=v1
DEBUG=True

# Database Configuration (PostgreSQL)
DATABASE_URL=postgresql+asyncpg://user:password@localhost:5432/logistics_db
# Alternative for synchronous connection:
# DATABASE_URL=postgresql://user:password@localhost:5432/logistics_db
DB_ECHO=False
DB_POOL_SIZE=20
DB_MAX_OVERFLOW=10

# Security Configuration (JWT)
SECRET_KEY=your-secret-key-change-this-in-production-min-32-chars
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Redis Configuration
REDIS_URL=redis://localhost:6379/0
REDIS_DECODE_RESPONSES=True
